<%- include("partials/head.ejs") %>
<link rel="stylesheet" href="/css/login.css">

<main id="login-container">
    <div class="login-card">
        <h1>Login Dashboard</h1>
        
        <% if (typeof error !== "undefined") { %>
            <div class="message-error">
                <%= error %>
            </div>
        <% } %>

        <form action="/api/users/login" method="POST" autocomplete="off" class="login-form">
            <div class="form-group">
                <label for="emailUser">Email</label>
                <input type="email" name="email" id="emailUser" placeholder="name@example.com" required>
            </div>
            
            <div class="form-group">
                <label for="passwordUser">Password</label>
                <input type="password" name="password" id="passwordUser" placeholder="••••••••" required>
            </div>

            <div class="login-buttons">
                <button type="submit" class="btn btn-login">Login</button>
                <button type="button" id="quickAccess" class="btn btn-secondary btn-login">Acceso rápido</button>
            </div>
        </form>
    </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const emailUser = document.getElementById("emailUser");
    const passwordUser = document.getElementById("passwordUser");
    const quickAccess = document.getElementById("quickAccess");

    if (quickAccess) {
        quickAccess.addEventListener("click", () => {
            emailUser.value = "acceso@rapido.com";
            passwordUser.value = "fast";
        });
    }
});
</script>
